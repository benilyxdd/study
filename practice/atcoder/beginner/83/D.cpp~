#include <bits/stdc++.h>

using namespace std;

#define ll long long

void solve() {
	string s;
	cin >> s;
	int mx = 0, temp = 0;
	for (int i = 0; i < s.length(); i++) {
		if (s[i] == '1'){
			temp++;
			mx = max(temp, mx);
		} else {
			temp = 0;
		}
	}
	int mn = 10001, temp2 = 10001;
	for (int i = 0; i < s.length(); i++) {
		if (s[i] == '0') {
			temp2--;
			mn = min(10001-temp2, mn);
		} else {
			temp = 10001;
		}
	}
	int ans = __gcd(mn, mx);
	cout << ans << "\n";
}

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);

	int t = 1, i = 1;
	//cin >> t;
	while(t--) {
		//cout << "Case #" << i << ": ";
		solve();
		//i++;
	}
	return 0;
}

