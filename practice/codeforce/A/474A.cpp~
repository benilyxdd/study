#include <bits/stdc++.h>

using namespace std;

#define ll long long

void solve() {
	string r = "wertyuiopsdfghjkl;xcvbnm,./";
	string l = "qwertyuioasdfghjklzxcvbnm,.";
	char c;
	cin >> c;
	string s;
	cin >> s;
	if (c == 'R') {
		for (int i = 0; i < s.length(); i++){
			int n = distance(l.begin(), find(l.begin(), l.end(), s[i]));
			cout << r[n];
		}
	} else {
		for (int i = 0; i < s.length(); i++){
			int n = distance(r.begin(), find(r.begin(), r.end(), s[i]));
			cout << l[n];
		}
	}
	cout << "\n";
}

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);

	int t = 1, i = 1;
	//cin >> t;
	while(t--) {
		//cout << "Case #" << i << ": ";
		solve();
		//i++;
	}
	return 0;
}


