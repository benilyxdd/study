#include <bits/stdc++.h>

using namespace std;

#define ll long long

void solve() {
	int a, n;
	cin >> n;
	vector<int> v;
	for (int i = 0; i < n; i++) {
		cin >> a;
		v.push_back(a);
	}

	int cnt = 0;
	bool r = false;
	for (int i = 0; i < n; i++) {
		if (r == false) {
			if (v[i] == 1) {
				cnt++;
				if (v[i+1] == 0) {
					i++;
				}
			} else {
				if (v[i+1] == 0) {
					i++;
				}	
			}
			r = true;
		} else {
			if (v[i+1] == 1) {
				i++;
			}
			r = false;
		}
	}
	cout << cnt << "\n";
}

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);

	int t = 1, i = 1;
	cin >> t;
	while(t--) {
		//cout << "Case #" << i << ": ";
		solve();
		//i++;
	}
	return 0;
}

